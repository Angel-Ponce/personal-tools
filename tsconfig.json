{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "$templates": ["src/components/templates"],
      "$screens/*": ["src/screens/*"],
      "$assets/*": ["src/static/*"],
      "$organisms": ["src/components/organisms"],
      "$stores": ["src/stores"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
